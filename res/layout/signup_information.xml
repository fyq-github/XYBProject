<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/L0"
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:background="#00A1BE" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:background="#00A1BE"
            android:text="取消" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="#00A1BE"
            android:text="报名信息"
            android:textSize="18sp" />
 <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00A1BE"
            android:text="完成" />
       
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名" />

        <EditText
            android:id="@+id/nameedittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sexview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别" />

        <RadioGroup
            android:id="@+id/sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/male"
                android:text="男" />

            <RadioButton
                android:id="@+id/female"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/schoolview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校" />

        <EditText
            android:id="@+id/schooledittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入学校"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L4"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/departmentview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="院系" />

        <EditText
            android:id="@+id/departmentedittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入院系"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L5"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/engineeringview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业" />

        <EditText
            android:id="@+id/engineeringedittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入专业"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L6"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gradeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级" />

        <EditText
            android:id="@+id/gradeedittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入班级"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L7"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/studentidview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号" />

        <EditText
            android:id="@+id/studentidedittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入学号"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L8"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/phonenumberview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号" />

        <EditText
            android:id="@+id/phonenumberedittest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:singleLine="true" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/tongbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="同步到个人信息" />

</LinearLayout>